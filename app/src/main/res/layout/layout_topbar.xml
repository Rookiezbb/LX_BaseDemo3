<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_top"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_state_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height">

    <LinearLayout
        android:id="@+id/lt_top_left"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center|left"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_top_left"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:padding="10dp"
            android:src="@drawable/ic_back_black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/color_3F3F3F"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lt_top_right"
        android:layout_toRightOf="@+id/lt_top_left"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_3F3F3F"
        android:textSize="@dimen/text_size_big_xxx" />

    <LinearLayout
        android:id="@+id/lt_top_right"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center|right"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/color_3F3F3F"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />
    </LinearLayout>


    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_E8E7E9"
        android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>