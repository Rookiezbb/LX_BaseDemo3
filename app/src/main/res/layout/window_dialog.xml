<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/bg_loading_dialog">

    <TextView
        android:id="@+id/windowDialog_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/color_4A4A4A"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:id="@+id/windowDialog_LF"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/windowDialog_title"
        android:background="@color/color_E7E9EA"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/windowDialog_overLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/windowDialog_buttonLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/windowDialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:visibility="gone" />

            <View
                android:id="@+id/windowDialog_buttonView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_E7E9EA"
                android:visibility="gone" />

            <TextView
                android:id="@+id/windowDialog_sure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_2772FF"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/windowDialog_close"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:src="@drawable/ic_close_address"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/windowDialog_buttonLayView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/windowDialog_overLay"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:visibility="gone"
        android:background="@color/color_E7E9EA" />

    <TextView
        android:id="@+id/windowDialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/windowDialog_buttonLayView"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/color_4A4A4A"
        android:textSize="15sp" />

</RelativeLayout>
